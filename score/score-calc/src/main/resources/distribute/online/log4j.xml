	<category name="com.feiniu.score.handler.GradeHandler" additivity="false">
		<level value="info" />
		<appender-ref ref="gradeHandler" />
		<appender-ref ref="DEBUGConsole" />
	</category>
	<!-- start CRM等级消息消费-->


	<!--start kafka 信息 -->
	<appender name="kafka" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/kafka/kafka.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<logger name="kafka" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>

	<logger name="org.apache.zookeeper" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>

	<logger name="com.feiniu.kafka" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>
	<!--end kafka 信息 -->


	<!--start feiniu 信息 -->
	<appender name="feiniu" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/feiniu/allDetail.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
