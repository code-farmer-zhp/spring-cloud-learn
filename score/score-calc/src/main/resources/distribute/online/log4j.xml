		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<category name="com.feiniu.score.handler.OrderScoreHandler" additivity="false">
		<level value="info" />
		<appender-ref ref="orderScoreHandler" />
		<appender-ref ref="DEBUGConsole" />
	</category>
	<!-- end 提交订单、付款-->

	<!-- start CRM成长值消息消费-->
	<appender name="growthHandler" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/growthHandler/growthHandler.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<category name="com.feiniu.score.handler.GrowthHandler" additivity="false">
		<level value="info" />
		<appender-ref ref="growthHandler" />
		<appender-ref ref="DEBUGConsole" />
	</category>
	<!-- start CRM成长值消息消费-->

	<!-- start CRM等级消息消费-->
	<appender name="gradeHandler" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/gradeHandler/gradeHandler.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
