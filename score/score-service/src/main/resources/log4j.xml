<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
					 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
					 xsi:schemaLocation="http://jakarta.apache.org/log4j/ ">

	<!-- appender name="STDOUT" class="org.apache.log4j.ConsoleAppender"> <layout 
		class="org.apache.log4j.PatternLayout"> <param name="ConversionPattern" value="%-5p 
		%d{MM月dd号 HH:mm} %-36c %5L %m%n" /> </layout> </appender -->

	<!-- 把DEBUG信息输出到控制台 -->
	<appender name="DEBUGConsole" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c   %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG"/>
		</filter>
	</appender>
	<!-- 把INFO信息输出到控制台 -->
	<appender name="INFOConsole" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c   %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO"/>
		</filter>
	</appender>


   <!--start kafka 信息 -->
	<appender name="kafka" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/kafka/kafkaProducer.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<logger name="kafka" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>

	<logger name="org.apache.zookeeper" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>

	<logger name="com.feiniu.kafka" additivity="false">
		<level value="info" />
		<appender-ref ref="kafka" />
		<appender-ref ref="DEBUGConsole" />
	</logger>
	
	<!--kafka消息 发送信息 -->
	<appender name="ProducerClientUtils" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/score/producerKafkaMsg.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	<category name="com.feiniu.kafka.client.ProducerClient" additivity="false">
		<level value="info" />
		<appender-ref ref="ProducerClientUtils" />
	</category>
	
	<!--end kafka 信息 -->

	<!--kafka消息 发送信息 -->

	<appender name="c3ToSend" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/score/c3ToSend.log" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<category name="com.feiniu.score.service.C3PkadToKafkaServiceImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="c3ToSend" />
		<appender-ref ref="DEBUGConsole" />
	</category>

	<!-- 把INFO信息输出到日志文件 -->

	<appender name="INFO" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/score/service.log"/>
		<param name="Encoding" value="UTF-8"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p  %d   %-36c   %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO"/>
		</filter>
	</appender>
	<root>
		<priority value="debug" />
		<appender-ref ref="INFOConsole" />
		<appender-ref ref="INFO" />
	</root>
</log4j:configuration>